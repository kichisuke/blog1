.container
  .header
    = render partial: 'layouts/header'
  .category
    .category_title
      Category
    - @category.each do |c|
      .blog_category
      %a{href: 'category/' + c.genre}
        = fa_icon "chevron-right"
        = c.genre
  .blog_content
    .new_post
      %a{href: '/new_post'}
        newpost
    .blog#blog_setion
      - @blogs.each do |blog|
        .blog_post
          .date
            %h1
              =blog.created_at.strftime("%B %d, %Y")
          .title
            %h2
              %a{href: 'blog/' + blog.id.to_s}
                =blog.title
          .body-trunc
            %p
              -exPost = blog.content.to_plain_text.index("[")
              -if exPost==nil
                -exPost = blog.content.to_plain_text.length
              =blog.content.to_plain_text.slice(0,exPost)
            %p.more
              %a{href: 'blog/' + blog.id.to_s}
                Read more
          .genre
            = fa_icon "folder"
            =blog.genre
  .page
    = paginate @blogs           
  .footer
    = render partial: 'layouts/footer'

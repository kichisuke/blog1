.container
  .header
    = render partial: 'layouts/header'
  .main_title
    Latest Blog
  %hr/ 
  .content
    .posts#post_setion
      - @posts.each do |post|
        = link_to 'blog/' + post.id.to_s, class:"post-card" do
          .image
            =image_tag post.media unless post.media.blank?
          .title
            %h2
              =post.title
          .date
            %h3
              =post.updated_at
          .body-trunc
            %p
              -exPost = post.content.to_plain_text.index("[")
              -if exPost==nil
                -exPost = post.content.to_plain_text.length
              =post.content.to_plain_text.slice(0,exPost) + "..."

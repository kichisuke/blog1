!!!
%html
  %head
    = stylesheet_link_tag "new_post"
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
  %body
    .wrapper
      .header
        = render partial: 'layouts/header'
      .blog_post_form_area 
        = form_with model: @blog do |form|
          .blog_post_form_area_title
            = form.text_area :title,placeholder: "Name"
            = form.text_area :genre,placeholder: "Genre"
            = form.text_area :pref_name,placeholder: "Pref"
            = form.text_area :city_name,placeholder: "City"
            = form.text_area :food_name,placeholder: "Food"
            = form.file_field :media
            = form.rich_text_area :content,placeholder: "Content"
            = form.submit "Make draft"
    .footer#footer_wrapper
      = render partial: 'layouts/footer'    

.wrapper
  .header
    = render partial: 'layouts/header'
  .content
    .content_image
      = image_tag @blogs.media,size: "600x300" unless @blogs.media.blank?
    .content_title
      =@blogs.title
    .content_date
      =@blogs.created_at.strftime("%B %d, %Y")
    .content_body 
      =@blogs.content
    .edit
      %a{href: '/blog/' + params[:id] + '/draft/edit'}
        edit   
.footer
  = render partial: 'layouts/footer'

.wrapper
  .header
    = render partial: 'layouts/header'
  .content
    .post_area
      .post_title
        %p
          Post Any Images about Japan!
        %p
          â†“  
      .form_area
        = form_with model: @posts do |form|
          .field
            = form.label :comment
            .br
            = form.text_field :title
            .br
            = form.label :image
            .br
            = form.file_field :image
            .br
            = form.submit "Post"
    .image_area
      - @image.each do |i|
        =image_tag i.image ,size: "350x200" unless i.image.blank?
      .image_area_comment  
        - @image.each do |i|
          .image_area_comment_title
            %span#title
              =i.title
  .footer
    = render partial: 'layouts/footer'

.header_main
.header_menu
  %ul.main_title
    %a{href: "/"}
      AnyTopicsJapan
  %ul.topics
    %li.all
      = link_to 'All', '/blog'
    %li{class: @rankCategory[0]}
      = link_to @rankCategory[0], '/category/' + @rankCategory[0]  unless @rankCategory[0].blank?
    %li{class: @rankCategory[1]}
      = link_to @rankCategory[1], '/category/' + @rankCategory[1]  unless @rankCategory[1].blank?
    %li{class: @rankCategory[2]}
      = link_to @rankCategory[2], '/category/' + @rankCategory[2]  unless @rankCategory[2].blank?
    %li.food
      %a
        food
        %ul.topics_second    
          - @food.each do |f|
            %li
              %a{href: "/food/" + f}
                =f
    %li.city
      %a
        city
        %ul.topics_second
          - @pref.each do |p|
            %li
              %a{href: "/city/" + p}
                =p
    %li.shop
      = link_to 'Shopping', '/shop'              
    %li.contact
      %a{href: "#"}
        Contact 
  %ul.auth_menu
    %li
      =link_to 'Draft', "/draft_open", method: :get if user_signed_in?        
    %li
      =link_to 'SignOut', "/users/sign_out", method: :delete if user_signed_in?
  %ul.mobile_header_content
    .l-drawer
      %input{class: "l-drawer__checkbox", id:"chk_box", type: "checkbox"}
      %label{class: "l-drawer__icon", for: "chk_box", id: 'menu_icon'}
        %span{class: "l-drawer__icon-parts"}
      %label{class: "l-drawer__overlay", for: "chk_box"}
      .mobile_header_menu
        %ul.mobile_header_menu_wrapper
          %li.mobile_header_menu_wrapper_all
            = link_to 'All', '/blog'
          %li.mobile_header_menu_wrapper_first
            = link_to @rankCategory[0], '/category/' + @rankCategory[0]  unless @rankCategory[0].blank?
          %li.mobile_header_menu_wrapper_second
            = link_to @rankCategory[1], '/category/' + @rankCategory[1]  unless @rankCategory[1].blank?
          %li.mobile_header_menu_wrapper_city
            %a
              City
              %ul
                - @pref.each do |p|
                  %li
                    %a{href: "/city/" + p}
                      =p
          %li.mobile_header_menu_wrapper_shop
            %a{href: "/shop"}
              Shopping              
          %li.mobile_header_menu_wrapper_contact
            %a{href: "#"}
              Contact
            
.header_main

.header_menu
  %ul.main_title
    %a{href: "/"}
      AnyTopicsJapan
  %ul.topics
    %li.all
      = link_to 'All', '/blog'
    %li.coffee
      = link_to 'Coffee','/category/coffee' 
    %li.food
      = link_to 'Food','/category/food' 
    %li.city
      %a
        City
        %ul.topics_second
          - @pref.each do |p|
            %li
              %a{href: "/city/" + p}
                =p
    %li.contact
      %a{href: "#"}
        contact 
  %ul.auth_menu
    %li
      =link_to 'Draft', "/draft_open", method: :get if user_signed_in?        
    %li
      =link_to 'SignOut', "/users/sign_out", method: :delete if user_signed_in?
.mobile_header_content
  .mobile_main_title
    %a{href: "/"}
      AnyTopicsJapan
  %label{for: "chk_box", id: 'menu_icon'}
    %span
  %input{type: "checkbox", id:"chk_box"}
  .mobile_main_menu
    .mobile_main_menu_title
      %p
        menu
    %ul
      %li.mobile_main_menu_news
        %p
          = link_to 'News', '#'
      %li.mobile_main_menu_blog
        %p
          = link_to 'Blog', '/blog'
      %li.mobile_main_menu_post
        %p
          post
      %li.mobile_main_menu_city
        %p
          city
      %li.mobile_main_menu_contact
        %p
          contact
